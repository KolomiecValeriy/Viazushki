{% extends '@Viazushki/base.html.twig' %}

{% block topMenu %}
    {{ knp_menu_render('main') }}
{% endblock %}

{% block content %}
    <!-- Login Box -->
    <div class="col-md-6 col-md-offset-3 col-sm-offset-3">
        {{ form_start(form, { 'attr': {'class': 'login-page'} }) }}
        <div class="login-header margin-bottom-30">
            <h2>Смена пароля</h2>
        </div>
        <div class="group {% if form_errors(form.plainPassword.first) %}has-error{% endif %}">
            {{ form_errors(form.plainPassword.first) }}
            <div class="input-group margin-bottom-20">
                <span class="input-group-addon">
                    <i class="fa fa-lock"></i>
                </span>
                {{ form_widget(form.plainPassword.first, { 'attr': {'placeholder': 'Введите новый пароль'} }) }}
            </div>
        </div>
        <div class="group {% if form_errors(form.plainPassword.second) %}has-error{% endif %}">
            {{ form_errors(form.plainPassword.second) }}
            <div class="input-group margin-bottom-20">
                <span class="input-group-addon">
                    <i class="fa fa-lock"></i>
                </span>
                {{ form_widget(form.plainPassword.second, { 'attr': {'placeholder': 'Повторите пароль'} }) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {{ form_widget(form.submit, { 'label': 'Сменить пароль', 'attr': { 'class': 'btn btn-primary pull-right', 'data-change-password': ''} }) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
    <!-- End Login Box -->
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('assets/js/security.js') }}"></script>
{% endblock %}