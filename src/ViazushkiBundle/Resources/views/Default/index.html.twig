{% extends '@Viazushki/layers.html.twig' %}

{% block content %}
    <!-- Main Column -->
    <div class="col-md-9">
        {% for toy in pagination %}
            <div class="blog-post">
                <div class="blog-item-header">
                    <div class="blog-post-date pull-left">
                        <span class="day">{{ toy.createdAt|date('d') }}</span>
                        <span class="month">{{ toy.createdAt|date('M') }}</span>
                    </div>
                    <h2>
                        <a href="{{ path('viazushki_toy', {'slug': toy.slug}) }}">{{ toy.name }}</a>
                    </h2>
                    <div class="blog-post-details">
                        <div class="blog-post-details-item blog-post-details-item-left blog-post-details-tags tags-icon">
                            {% for tag in toy.tags %}<a href="{{ path('viazushki_toy_by_tag', {'slug': tag.slug}) }}"><i class="fa fa-tags"></i>{{- tag.name -}}</a>{% if not loop.last %},{% endif %}
                            {% endfor %}
                        </div>
                        <div {% if is_granted('IS_AUTHENTICATED_FULLY') %}data-toy-like="{{ toy.id }}"{% endif %} class="blog-post-details-item blog-post-details-item-left blog-post-details-item-last comments-icon pull-right">
                            <span><i class="fa fa-thumbs-up"></i>
                                {%- for like in toy.like if like.user == app.user -%}
                                    Вы {% if toy.like|length > 1 %}и ещё {{ toy.like|length - 1 -}}{% endif %}
                                {%- else %}{{- toy.like|length -}}
                                {% endfor %}</span>
                            {{ form_start(likeForms[toy.id], {'action': path('viazushki_like_update', {'slug': toy.slug}), attr: {'data-like-form': ''}}) }}
                            {{ form_end(likeForms[toy.id]) }}
                        </div>
                        {% if toy.comments|length > 0 %}
                            <div class="blog-post-details-item blog-post-details-item-left blog-post-details-item-last comments-icon pull-right">
                                <i class="fa fa-comments"></i>
                                {{- 'comment'|trans -}}: {{ toy.comments|length -}}
                            </div>
                        {% endif %}
                    </div>
                </div>
                <div class="blog">
                    <div class="clearfix"></div>
                    <div class="blog-post-body row margin-top-15">
                        <div class="col-md-5">
                            <img class="pull-left" src="
                                {%- if toy.mainImage -%}
                                    {{- asset('assets/images/') -}}{{- toy.mainImage -}}
                                {% else %}
                                    {{- asset('assets/images/no-image.png') -}}
                                {% endif %}" alt="thumb1">
                        </div>
                        <div class="col-md-7">
                            <p>{{ toy.description }}</p>
                        </div>
                    </div>
                    <div class="blog-item-footer">
                        <div class="row">
                            <div class="col-md-10">
                                <hr>
                            </div>
                            <div class="col-md-2">
                                <div class="blog-post-details-item blog-post-details-item-right pull-right">
                                    <a href="{{ path('viazushki_toy', {'slug': toy.slug}) }}" class="btn btn-primary">
                                        {{ 'view'|trans }}
                                        <i class="icon-chevron-right readmore-icon"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}

        {{ knp_pagination_render(pagination) }}
    </div>
    <!-- End Main Column -->
    <!-- Side Column -->
    <div class="col-md-3 margin-top-30">
        <div class="blog-tags">
            <h3>{{ 'categories'|trans }}</h3>
            <ul class="blog-tags">
                {% for category in categories %}
                    <li>
                        <a href="{{ path('viazushki_toy_by_category', {'slug': category.slug}) }}" class="blog-tag">{{ category.name }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div class="blog-tags">
            <h3>{{ 'tags'|trans }}</h3>
            <ul class="blog-tags">
                {% for tag in tags %}
                    <li>
                        <a href="{{ path('viazushki_toy_by_tag', {'slug': tag.slug}) }}" class="blog-tag">{{ tag.name }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div class="recent-posts">
            <h4>{{ 'last added'|trans }}</h4>
            <ul class="posts-list margin-top-10">
                {% for lastToy in lastToys %}
                    <li>
                        <div class="recent-post">
                            <a href="">
                                <img class="pull-left" src="{% if lastToy.mainImage %}
                                        {{- asset(lastToy.mainImage.imagePath) | imagine_filter('image_54_54') -}}
                                    {% else %}
                                        {{- asset('assets/images/no-image.png') | imagine_filter('image_54_54') -}}
                                    {% endif %}" alt="thumb1">
                            </a>
                            <a class="posts-list-title" href="{{ path('viazushki_toy', {'slug': lastToy.slug}) }}">{{ lastToy.name }}</a>
                            <br>
                            <span class="recent-post-date">{{ lastToy.createdAt|date('M d, Y') }}</span>
                        </div>
                        <div class="clearfix"></div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <!-- End Side Column -->
{% endblock %}
